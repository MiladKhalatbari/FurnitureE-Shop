@model IEnumerable<FurnitureOnlineShop.MVC.Models.Product.ProductVm>

@{
    ViewData["Title"] = "Products";
    int i = 0;
}

<div class="container my-5">
    <table class="table">
        <thead>
            <tr>
                <th class="align-middle text-center">#</th>
                <th class="align-middle text-center">
                    Image
                </th>
                <th class="align-middle text-center">
                    Title
                </th>
                <th class="align-middle text-center">
                    Quantity In Stock
                </th>
                <th class="align-middle text-center">
                    Price
                </th>
                <th class="align-middle text-center">
                    <a asp-action="Create" class="btn btn-success">Create New <i class="fa-solid fa-plus"></i></a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td class="align-middle text-center">
                        @i
                    </td>
                    <td class="align-middle text-center">
                        <img src="@item.ImagePath" style="max-width:120px; max-height:120px">
                    </td>
                    <td class="align-middle text-center">
                        <p class="h4"> @item.Title</p>
                    </td>
                    <td class="align-middle text-center">
                        @item.QuantityInStock
                    </td>
                    <td class="align-middle text-center">
                        @item.Price.ToString("C2")
                    </td>
                    <td class="align-middle text-center">
                        <a class="btn btn-sm btn-secondary" href="/Product/Edit?id=@item.Id">Edit <i class="fa-solid fa-pencil"></i></a> |
                        <a class="btn btn-sm btn-danger" href="/Product/Delete?id=@item.Id">Delete <i class="fa-regular fa-trash-can"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
